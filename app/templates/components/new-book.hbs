{{#if addNewBook}}
  <div class="add-book">
    <form>
      <div class="form-group">
        {{input value=title id="title" placeholder="Title"}}
      </div>

      <div class="form-group">
        {{input value=author id="author" placeholder="Author"}}
      </div>

      <div class="form-group">
        {{input value=genre id="genre" placeholder="Genre"}}
      </div>

      <div class="form-group">
        {{textarea value=summary id="summary" placeholder="Description"}}
      </div>

      <div class="form-group">
        {{textarea value=image id="image" placeholder="Image URL"}}
      </div>

      <div class="form-group">
        {{input value=publisher id="publisher" placeholder="Publisher"}}
      </div>

      <div class="form-group">
        {{input value=year id="year" placeholder="Year"}}
      </div>

      <button class="btn-edit btn-add" {{action 'saveBook'}}>Add Book</button>
    </form>
  </div>
{{else}}
  <button class="btn-edit" {{action 'addNewBook'}}>Add Book</button>
{{/if}}
