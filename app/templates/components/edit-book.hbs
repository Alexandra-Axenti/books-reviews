
{{#if editBookForm}}

  <div class="editBook">
    <form class="admin-form">
      <div class="form-group">
        {{input value=title id="title" placeholder=book.title}}
      </div>

      <div class="form-group">
        {{input value=author id="author" placeholder=book.author}}
      </div>

      <div class="form-group">
        {{input value=genre id="genre" placeholder=book.genre}}
      </div>

      <div class="form-group">
        {{textarea value=summary id="summary" placeholder=book.summary}}
      </div>

      <div class="form-group">
        {{textarea value=image id="image" placeholder=book.image}}
      </div>

      <div class="form-group">
        {{input value=publisher id="publisher" placeholder=book.publisher}}
      </div>

      <div class="form-group">
        {{input value=year id="year" placeholder=book.year}}
      </div>

      <button name="anchor" {{action 'edit' book}}>Save</button>
    </form>
  </div>

{{else}}

  <div class="btn-show">
      <button class="btn-edit" href="anchor" {{action 'editBookForm'}}>Edit Book</button>
  </div>

{{/if}}
