{{#if addNewReview}}
  <h1>New Review</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Subject</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        {{input value=email id="email"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="rating">Please select a rating:</label>
        <select name="rating" id="rating" onchange={{action (mut rating) value="target.value"}}>
          <option value=1>1</option>
          <option value=2>2</option>
          <option value=3>3</option>
          <option value=4>4</option>
          <option value=5>5</option>
          <option value="" selected=true>Please select a rating</option>
        </select>
      </div>

      <button {{action 'saveReview'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'addNewReview'}}>New Review</button>
{{/if}}
