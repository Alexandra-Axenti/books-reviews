{{#if addNewReview}}
  <h1>Add a Review</h1>
  <div>
    <form class="content new-review">
      <div class="form-group">
        {{input value=title id="title" placeholder="Subject"}}
      </div>

      <div class="form-group">
        {{input value=email id="email" placeholder="Email"}}
      </div>

      <div class="form-group">
        {{input value=author id="author" placeholder="Author"}}
      </div>

      <div class="form-group">
        {{textarea value=content id="content-review"}}
      </div>

      <div class="form-group">
        <select name="rating" id="rating" onchange={{action (mut rating) value="target.value"}}>
          <option value="" selected=true>Please select a rating</option>
          <option value=1>★</option>
          <option value=2>★★</option>
          <option value=3>★★★</option>
          <option value=4>★★★★</option>
          <option value=5>★★★★★</option>
        </select>
      </div>

      <button {{action 'saveReview'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-new-review" {{action 'addNewReview'}}>Add Your Review</button><br><br>
{{/if}}
