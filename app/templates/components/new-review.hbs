{{#if addNewReview}}
  <h1>New Review</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Subject</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        {{input value=email id="email"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="rating">Rating</label>
        {{input value=rating id="rating"}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>

      <button {{action 'saveReview'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'addNewReview'}}>New Review</button>
{{/if}}
