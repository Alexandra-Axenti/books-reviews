<div id="book">
  Ember.String.htmlSafe('<span class="glyphicon glyphicon-star-half"></span>')
  Ember.String.htmlSafe('<span class="glyphicons glyphicons-star-half"></span>')
  <div>{{book-rating book=model.book}} {{model.book.title}}</div><br>
  <div>{{model.book.author}}</div><br>
  <div>{{model.book.summary}}</div><br>
  <div>{{model.book.publisher}}</div><br>

  {{new-review saveReview='saveReview' book=model.book}}<br><br>

  {{#each model.reviews as |review|}}
  <div>{{comment-rating review}}
    {{review.title}} by {{review.author}}</div>
  <div>{{review.content}}</div><br><br>
  {{/each}}
</div>
